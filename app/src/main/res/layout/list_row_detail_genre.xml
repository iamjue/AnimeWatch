<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="2dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_id_list_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageListGenre"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagecontoh" />

        <TextView
            android:id="@+id/judulListGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageListGenre"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="One Piece"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genreListGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulListGenre"
            android:layout_toRightOf="@id/imageListGenre"
            android:paddingLeft="10dp"
            android:text="Musik,Komedi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jumlahEpisodeListGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genreListGenre"
            android:layout_toRightOf="@id/imageListGenre"
            android:paddingLeft="10dp"
            android:text="100 Episode"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hariUploadListGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlahEpisodeListGenre"
            android:layout_toRightOf="@id/imageListGenre"
            android:paddingLeft="10dp"
            android:text="Episode baru setiap hari RABU"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hariUploadListGenre"
            android:layout_toRightOf="@id/imageListGenre">

            <TableRow>

                <TextView
                    android:id="@+id/viewsListGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="1.000 view"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/downloadListGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="1.000.000 download"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>